form(action=`/products/update/${data._id}` method="post" class="regular-form")
    .labelInput
        label(for="name") Name:
        input(type="text" id="name" name="name", value=data.name)
    .labelInput
        label(for="stock") Stock:
        input(type="number" id="stock" name="stock", value=data.stock)
    .labelInput
        label(for="price") Price:
        input(type="number" id="price" name="price", value=extras.price)
    .labelInput
        label(for="sales") Sales:
        input(type="number" id="sales" name="sales", value=data.sales)
    button(type="submit") Update Product
br
a(href=`/products/delete/${data._id}` id="delete") Delete product, this cannot be undone
