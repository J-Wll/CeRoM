extends layouts/layout

block content
    h1 Login

    if message
        p= message.message

    form(action="/login/submit" method="post")
        input(placeholder="username" name="username" id="username" autocomplete="username")
        input(type="password" placeholder="password" name="password" id="password" autocomplete="current-password")
        button(type="submit") login  

    p Registration must be done by an Admin, please contact one if you need an account